@model IEnumerable<WebAPP.Models.OrderDetails>

@{

    ViewData["Title"] = "Order Listed";


}

<h3 class="text-center mt-4">List Order</h3>

<div class="container mt-4">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Order Code</th>
                <th scope="col">Order UserName</th>
                <th scope="col">Product Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
               

                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.OrderCode</td>
                    <td>@item.UserName</td>
                    <td>@item.ProductId</td>
                    <td>@item.UserName</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>

                </tr>

            }

           
        </tbody>
    </table>
</div>

<style>
    h3 {
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
    }

        .table img {
            display: block;
            margin: 0 auto;
            max-width: 100px;
            height: auto;
        }

    .btn {
        margin: 0 5px;
    }

    .form-inline {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .form-inline .form-control {
            width: auto;
            flex: 1;
            margin-right: 10px;
        }

        .form-inline .btn {
            flex-shrink: 0;
        }

    .thead-dark th {
        color: #fff;
        background-color: #343a40;
        border-color: #454d55;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .action-buttons a {
            margin: 0 5px;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #fff !important;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
            color: #fff !important;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff !important;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            color: #fff !important;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff !important;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            color: #fff !important;
        }
</style>
