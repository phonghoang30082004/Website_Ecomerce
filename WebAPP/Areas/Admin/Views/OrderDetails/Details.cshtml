@model WebAPP.Models.OrderDetails

<h2 class="text-center mt-4">Order Details</h2>

<div class="order-details-container">
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 label">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2 label">
            @Html.DisplayNameFor(model => model.OrderCode)
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.OrderCode)
        </dd>
        <dt class="col-sm-2 label">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class="col-sm-2 label">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2 label">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>
</div>
<div class="actions">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

<style>
    .order-details-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
    
    }

        .order-details-container h4 {
            color: #333;
        }

        .order-details-container hr {
            border-top: 1px solid #ccc;
        }

    .row {
        margin-bottom: 15px;
    }

    .label {
        font-weight: bold;
        color: #555;
    }

    .value {
        color: #000;
    }

    .actions {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

        .actions .btn {
            margin: 0 10px;
            min-width: 100px; /* Ensures both buttons have the same minimum width */
            text-align: center; /* Centers the text in the button */
        }

 

    .btn-secondary {
        background-color: #218838;
        border-color: #218838;
        color:white;
    }
</style>
