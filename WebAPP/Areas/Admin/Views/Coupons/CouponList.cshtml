@model IEnumerable<WebAPP.Models.Repository.Coupon>

<h2 class="text-center mt-4">Coupon List</h2>

<div class="container mt-4">
    <div class="text-left mb-3">
        <a href="@Url.Action("CreateCoupon")" class="btn btn-success">Create New Coupon</a>
    </div>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Code</th>
                <th>Discount Percentage</th>
                <th>Expiration Date</th>
                <th>Is Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coupon in Model)
            {
                <tr>
                    <td>@coupon.Code</td>
                    <td>@coupon.DiscountPercentage</td>
                    <td>@coupon.ExpirationDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (coupon.IsActive)
                        {
                            <span class="text-success">Yes</span>
                        }
                        else
                        {
                            <span class="text-danger">No</span>
                        }
                    </td>
                    <td class="action-buttons">
                        <a href="@Url.Action("EditCoupon", new { id = coupon.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="DeleteCoupon" asp-route-id="@coupon.Id" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

   
</div>

<style>
    h2 {
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
    }

        .table img {
            display: block;
            margin: 0 auto;
            max-width: 100px;
            height: auto;
        }

    .btn {
        margin: 0 5px;
    }

    .form-inline {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .form-inline .form-control {
            width: auto;
            flex: 1;
            margin-right: 10px;
        }

        .form-inline .btn {
            flex-shrink: 0;
        }

    .thead-dark th {
        color: #fff;
        background-color: #343a40;
        border-color: #454d55;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .action-buttons a {
            margin: 0 5px;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #fff !important;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
            color: #fff !important;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff !important;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            color: #fff !important;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff !important;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            color: #fff !important;
        }
</style>
