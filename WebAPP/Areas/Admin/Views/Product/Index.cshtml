@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
}
<h3 class="text-center">List Product</h3>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control mr-sm-2" placeholder="Search products..." />
    <button type="submit" class="btn btn-outline-success">Search</button>
    <a asp-action="Create" asp-controller="Product" class="btn btn-success ml-2">Thêm sản phẩm</a>
</form>

<table class="table table-striped table-hover" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Quantity</th>
            <th scope="col">Product Sold</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Product Slug</th>
            <th scope="col">Product Category</th>
            <th scope="col">Product Brand</th>
            <th scope="col">Product Manager</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td><a asp-controller="Product" asp-action="AddQuantity" asp-route-Id="@item.Id"><b>@item.Quantity</b></a></td>
                <td>@item.Sold</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>$@item.Price</td>
                <td><img src="~/media/products/@item.Image" width="100" height="100" class="img-thumbnail" /></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td class="action-buttons">
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Product" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <section>
        let table = new DataTable('#myTable');
    </section>

}
<style>
    h3 {
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
    }

        .table img {
            display: block;
            margin: 0 auto;
            max-width: 100px;
            height: auto;
        }

    .btn {
        margin: 0 5px;
    }

    .form-inline {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .form-inline .form-control {
            width: auto;
            flex: 1;
            margin-right: 10px;
        }

        .form-inline .btn {
            flex-shrink: 0;
        }

    .thead-dark th {
        color: #fff;
        background-color: #343a40;
        border-color: #454d55;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .action-buttons a {
            margin: 0 5px;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #fff !important;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
            color: #fff !important;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff !important;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            color: #fff !important;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff !important;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            color: #fff !important;
        }
</style>
