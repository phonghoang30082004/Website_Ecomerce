@model BrandModel
@{
    ViewData["Title"] = "Edit Brand";
}
<h3 class="text-center mt-4">Edit Brand</h3>
<div class="container mt-4">
    <div class="col-md-6 mx-auto">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label for="Name">Name</label>
                <input asp-for="Name" class="form-control" id="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" id="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Status">Status</label>
                <select asp-for="Status" class="form-control" id="Status">
                    <option value="1">Hiển thị</option>
                    <option value="0">Ẩn</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary text-white">Back To List Brands</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    h3, h4, h2 {
        margin-bottom: 20px;
    }



    .form-group {
        margin-bottom: 15px;
    }

    .btn {
        margin: 0 5px;
    }

    .btn-success, .btn-primary {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff !important;
    }

        .btn-success:hover, .btn-primary:hover {
            background-color: #218838;
            border-color: #1e7e34;
            color: #fff !important;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff !important;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: #fff !important;
        }

    .text-danger {
        color: #dc3545 !important;
    }
</style>
