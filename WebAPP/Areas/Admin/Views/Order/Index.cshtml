@model IEnumerable<WebAPP.Models.OrderModel>

@{
    ViewData["Title"] = "Order Listed";
}

<h3 class="text-center mt-4">List Order</h3>

<div class="container mt-4">
    <table class="table table-striped table-hover" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Order Code</th>
                <th scope="col">Order UserName</th>
                <th scope="col">Order Date</th>
                <th scope="col">Order Status</th>
                <th scope="col">Created Date</th>
                <th scope="col">Order Shipping cost</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.OrderCode</td>
                    <td>@item.UserName</td>
                    <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="text-success">Đơn hàng mới</span>
                        }
                        else if (item.Status == 2)
                        {
                            <span class="text-danger">Đã hủy</span>
                        }
                        else if( item.Status==0)
                        {
                            <span class="text-danger">Đơn hàng đã xử lý</span>
                        }
                    </td>
                    <td>@item.CreatedDate.ToString("dd//MM//yyyy")</td>
                    <td>@item.ShippingCost.ToString("#,##0,VNĐ")</td>
                    <td class="action-buttons">
                        <a asp-action="ViewOrder" class="btn btn-success ml-2" asp-controller="Order" asp-route-codeorder="@item.OrderCode">View</a>
                        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="OrderDetails" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="OrderDetails" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        let table = new DataTable('#myTable');
    </script>

}
<style>
    h3 {
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
    }

        .table img {
            display: block;
            margin: 0 auto;
            max-width: 100px;
            height: auto;
        }

    .btn {
        margin: 0 5px;
    }

    .form-inline {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .form-inline .form-control {
            width: auto;
            flex: 1;
            margin-right: 10px;
        }

        .form-inline .btn {
            flex-shrink: 0;
        }

    .thead-dark th {
        color: #fff;
        background-color: #343a40;
        border-color: #454d55;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .action-buttons a {
            margin: 0 5px;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #fff !important;
    }

