        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff !important;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            color: #fff !important;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff !important;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            color: #fff !important;
        }
</style>
