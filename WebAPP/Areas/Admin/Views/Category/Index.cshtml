@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "Category Listed";
}
<h3 class="text-center mt-4">List Category</h3>

<div class="container mt-4">
    <div class="text-left mb-3">
        <a asp-action="Create" asp-controller="Category" class="btn btn-success">Thêm danh mục</a>
    </div>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category Name</th>
                <th scope="col">Category Description</th>
                <th scope="col">Category Slug</th>
                <th scope="col">Category Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Slug</td>
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="text-success">Hiển Thị</span>
                        }
                        else if (item.Status == 0)
                        {
                            <span class="text-danger">Ẩn</span>
                        }
                    </td>
                    <td class="action-buttons">
                        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Category" asp-route-Id="@item.Id">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Category" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    h3 {
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
    }

        .table img {
            display: block;
            margin: 0 auto;
            max-width: 100px;
            height: auto;
        }

    .btn {
        margin: 0 5px;
    }

    .form-inline {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .form-inline .form-control {
            width: auto;
            flex: 1;
            margin-right: 10px;
        }

        .form-inline .btn {
            flex-shrink: 0;
        }

    .thead-dark th {
        color: #fff;
        background-color: #343a40;
        border-color: #454d55;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .action-buttons a {
            margin: 0 5px;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #fff !important;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
            color: #fff !important;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff !important;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            color: #fff !important;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff !important;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            color: #fff !important;
        }
</style>
