@model CategoryModel
@{
    ViewData["Title"] = "Edit Category";
}
<h4 class=" text-center mt-4">Edit Category</h4>
<div class="container mt-4">
    <div class="col-md-6 mx-auto">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label for="Name">Name</label>
                <input asp-for="Name" class="form-control" id="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" id="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Status">Status</label>
                <select asp-for="Status" class="form-control" id="Status">
                    <option value="1">Hiển thị</option>
                    <option value="0">Ẩn</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary text-white">Back To List Categories</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
