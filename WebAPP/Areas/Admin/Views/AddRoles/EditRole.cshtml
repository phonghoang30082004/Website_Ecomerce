@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Edit Role";
}

<h2>Edit Role</h2>

<form asp-action="EditRole" method="post">
    <input type="hidden" name="roleId" value="@Model.Id" />
    <div class="form-group">
        <label for="roleName">Chỉnh sửa quyền</label>
        <input type="text" class="form-control" id="roleName" name="roleName" value="@Model.Name" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Back to Role List</a>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">
        @ViewBag.Message
    </div>
}
