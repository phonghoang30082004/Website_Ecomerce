@model LoginViewModel
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@{
    ViewData["title"] = "Register";
}
<section id="">
    <!--form-->
    <div class="login-container">
        <div class="login-form">
            <h2>Login to your account</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="Login" asp-controller="Account">
                <div class="form-group">
                    <label for="UserName">UserName</label>
                    <input asp-for="UserName" id="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input asp-for="Password" type="password" id="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn">Login</button>
                <a asp-action="Create" asp-controller="Account">Create a new account</a>
            </form>
        </div>
    </div>
</section><!--/form-->

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Đặt chiều cao của container bằng chiều cao của viewport */
        margin: 0; /* Loại bỏ bất kỳ khoảng cách nào xung quanh */
    }

    .login-form {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        width: 100%;
        max-width: 400px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .login-form h2 {
            margin-bottom: 20px;
            font-size: 24px;
        }

        .login-form .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

            .login-form .form-group label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .login-form .form-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                box-sizing: border-box;
            }

        .login-form .btn {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #5cb85c;
            color: white;
            font-size: 16px;
            cursor: pointer;
            margin-top: 10px;
        }

            .login-form .btn:hover {
                background-color: #4cae4c;
            }

        .login-form a {
            display: block;
            margin-top: 10px;
            color: #007bff;
            text-decoration: none;
        }

            .login-form a:hover {
                text-decoration: underline;
            }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}