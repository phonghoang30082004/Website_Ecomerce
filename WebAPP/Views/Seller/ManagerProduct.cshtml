@model IEnumerable<WebAPP.Models.ProductModel>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2>Danh sách sản phẩm</h2>

<a asp-action="Create"  class="btn btn-warning">Thêm sản phẩm</a>
<a asp-action="CreateCategory"  class="btn btn-warning">Thêm Danh Mục</a>
<a asp-action="CreateBrand"  class="btn btn-warning">Thêm Thương Hiệu</a>


<table class="table table-striped table-hover" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th>Người bán (UserId)</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Quantity</th>
            <th scope="col">Product Sold</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Product Slug</th>
            <th scope="col">Product Category</th>
            <th scope="col">Product Brand</th>
            <th scope="col">Product Manager</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.UserId</td>  <!-- Hiển thị UserId -->
                <td>@item.Name</td>
                <td><a asp-controller="Seller" asp-action="AddQuantity" asp-route-Id="@item.Id"><b>@item.Quantity</b></a></td>
                <td>@item.Sold</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>$@item.Price</td>
                <td><img src="~/media/products/@item.Image" width="100" height="100" class="img-thumbnail" /></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td class="action-buttons">
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Seller" asp-route-Id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Seller" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
